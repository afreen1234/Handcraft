@using EPiServer.Editor
@using EPiServer.Core
@using EPiServer.Web
@using Handcraft.Models.ViewModels
@using Handcraft.Models.Pages
@using Handcraft.Helpers
@model IPageViewModel<SitePageData>
<div class="header">
    <div class="span2">
        @Html.PropertyFor(x => x.Layout.Logo)
    </div>
        <div class="span10">
            <div class="handcraftMenu">
                <div class="navbar fixed-top">
                    <div class="navbar-inner">
                        <div class="header-container">
                            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </a>
                            <div class="nav-collapse">
                                <ul class="nav">
                                    <li class="@(Model.CurrentPage.ContentLink.CompareToIgnoreWorkID(SiteDefinition.Current.StartPage) ? "active" : null)">@Html.ContentLink(SiteDefinition.Current.StartPage)</li>
                                    @Html.MenuList(SiteDefinition.Current.StartPage,
                                                                @<li class="@(item.Selected ? "active" : null)">
                                                                    @Html.PageLink(item.Page, null, new { })
                                                                </li>)
                                </ul>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

